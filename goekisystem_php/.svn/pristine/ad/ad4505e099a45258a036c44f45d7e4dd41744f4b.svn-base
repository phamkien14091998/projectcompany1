.style-custom {
    border: 0px;
    background: none;
}
#alert-fail {
    background-color: rgba(221, 75, 57, .5) !important;
    text-align: left;
    padding-left: 50px;
    border: 0px;
}
#alert-success {
    background-color: rgb(4,206,149);
    text-align: left;
    padding-left: 50px;
    border: 0px;
}
#client_cd .select2-container .select2-selection--single  {
    height: 40px;
}

#modal-report-content {
    display: none;
    background-color: rgba(0, 0, 0, .2);
    padding: 300px 0px;
    position: fixed;
    top: 0px;
    width: calc(100%);
    height: 100%;
    left: 0px;
    text-align: center;
}
#modal-report-content #modal-cmt {
    display: block;
    background-color: #fff;
    color: #000;
    width: 30%;
    padding: 20px;
    margin: 0 auto;
}

@media screen and (max-width: 978px) {
    #modal-report-content #modal-cmt {
        width: 90%;
    }
}

#modal-report-content #modal-cmt .blockLink {
    text-align: center;
}

#modal-report-content #modal-cmt #content {
    text-align: center;
    margin-bottom: 10px;
    font-size: 14px;
}

#modal-report-content #modal-cmt .blockLink #modal_close {
    padding: 10px 20px;
    display: block;
    background: black;
    color: #fff;
    max-width: 150px;
    margin: 0 auto;
    border-radius: 5px;
    cursor: pointer;
    font-size: 12px;
}

.send_noti_expire {
    max-width: 500px;
    margin: 0 auto;
}

.send_noti_expire p {
    margin: 10px 0px;
}
.send_noti_expire textarea {
    max-width: 500px;
    width: 100%;
}
.send_noti_expire input[type="submit"] {
    color: #fff;
    background-color: #000;
    padding: 10px 30px;
    border: 0px;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;
    margin: 0 auto;
    display: -webkit-box;
}

.ng-work .row form .keywork {
    height: 35px;
    width: 500px;
}

.ng-work  input[type=submit] {
    background: #03a678;
    padding: 7px 25px;
    color: #fff;
    border: 0px;
}

.ng-work table input[type="text"] {
    width: 100%;
    border: 0px;
    height: 35px;
    background: antiquewhite;
    padding-left: 10px;
}
